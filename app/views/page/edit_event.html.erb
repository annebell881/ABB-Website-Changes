<% @page_title = "ABB Events" %>
<%= stylesheet_link_tag 'edit_event' %>
<% content_for :main do %>
    <main>
        <%= render :partial => 'page/nav_bar' %>
        <div class="container edit-event-container">
            <h1 id="edit-event-h1">Edit Event</h1>
            <form class="edit-event-form" action="">
                <div class="edit-event-body">
                    <label for="">Event name:</label>
                    <input type="text" name="event_name" class="form-control" id="exampleInputEventName" aria-describedby="emailHelp" placeholder="Event name">
                    <br>
                    <label for="">Date:</label>
                    <input type="date" name= "date" class="form-control" id="exampleInputDate" aria-describedby="dateHelp">
                    <br>
                    <label for="">Time:</label>
                    <input type="text" name="time" class="form-control" id="exampleInputTime" aria-describedby="timeHelp" placeholder="Time">
                    <br>
                    <label for="">Location:</label>
                    <input type="text" name= "location" class="form-control" id="exampleInputLocation" aria-describedby="locationHelp" placeholder="400 Bizzell St">
                    <br>
                    <label for="">Event Type:</label>
                    <input type="text" name="event_type" class="form-control" id="exampleInputType" aria-describedby="locationHelp" placeholder="Event Type">
                    <br>
                    <label for="">Description:</label>
                    <textarea class="form-control" name= "description" id="exampleFormControlTextarea1" rows="3"></textarea>
                    <br>
                    <label for="">Password:</label>
                    <input type="password" name="password" class="form-control" id="exampleInputPassword" aria-describedby="passwordHelp" placeholder="Password">
                    <br>
                    <label for="">Confirm Password:</label>
                    <input type="password" class="form-control" id="exampleInputPassword" aria-describedby="passwordHelp" placeholder="Confirm Password">
                    <div class="buttons-to-submit">
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </form>
        </div>
    </main>
<% end %>