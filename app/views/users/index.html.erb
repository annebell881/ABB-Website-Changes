<%= stylesheet_link_tag 'users_index' %>
<% content_for :main do %>
    <main>
    <%= render :partial => 'page/nav_bar' %>
    <div class="container first-container-about container-fluid">
        <div class = "row first-row make-f">
            <p class="tamu-row-1">Texas A&Ms Professional Brotherhood</p>

        </div>
        <div class = "row about-row">
            <div class="col what-is-abb order-last">
                <h1>All Users</h1>
                <hr style="color:white">
                

                <div>

                <br>

                <table class="table table-light">
                    <thread>
                        <tr>
                            <th scope="col">Name</th>
                            <th colspan="3"></th>
                        </tr>
                    </thread>
                    <tbody>
                      <% @users.each do |user| %>
                        <tr>
                          <td><%= user.name %></td>
                          <td>    
                          <% if user.image.attached? %>
                            <%= image_tag user.image, width: "50px", height: "50px" %>
                          <% else %>
                            <%= image_tag 'defaultProf.jpg', width: "50px", height: "50px" %>
                          <% end %>
                          </td>
                          <td><%= link_to 'Show', user %></td>
                          <td><%= link_to 'Edit', edit_user_path(user) %></td>
                          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                      <% end %>
                    </tbody>
                </table>


                <br>
                <hr>

                <br>

                <u> <%= link_to 'New User', new_user_path, {:style=>'color:#FFFFFF;'} %> </u>
                

                <br>
                <br>
                <br>

                </div>
            </div>
        </div>
    </div>
</main>
<% end %>
</div>