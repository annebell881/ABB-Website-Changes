  <p>
    <strong>Request Id:</strong>
    <%= @request.id %>
  </p>

  <p>
    <strong>For User:</strong>
    <%= @user.name %>
  </p>

  <p>
    <strong>Points:</strong>
    <%= @request.points %>
  </p>

