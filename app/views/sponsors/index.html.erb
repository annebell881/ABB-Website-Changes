<p id="notice"><%= notice %></p>

<h1>Sponsors</h1>

<table>
  <thead>
    <tr>
      <th>Sponsor Name</th>
      <th>Sponsor Type</th>
      <th>Sponsor Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= sponsor.sponsor_name %></td>
        <td><%= sponsor.sponsor_type %></td>
        <td>
        <% if sponsor.image.attached? %>
           <%= image_tag sponsor.image, width: "50px", height: "50px" %>
        <% else %>
           <%= image_tag 'defaultProf.jpg', width: "50px", height: "50px" %>
        <% end %>
        </td>
        <td><%= link_to 'Show', sponsor %></td>
        <td><%= link_to 'Edit', edit_sponsor_path(sponsor) %></td>
        <td><%= link_to 'Destroy', sponsor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sponsor', new_sponsor_path %>